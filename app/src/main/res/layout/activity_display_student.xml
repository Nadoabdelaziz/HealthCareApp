<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myFrameLayout"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:isScrollContainer="true"
    tools:context=".DisplayStudentActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="25dp"
        android:text="تفاصيل الطالب"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="124dp"
        android:layout_height="124dp"
        android:layout_centerHorizontal="true"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="2dp"
        android:layout_marginTop="80dp" />

    <ImageView
        android:id="@+id/backbtn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="45dp"
        android:src="@drawable/backbtn"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|top"
            android:layout_marginTop="190dp"
            android:background="#000099"
            android:isScrollContainer="true"
            android:orientation="horizontal"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:orientation="vertical">

                <Button
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@color/main_blue_color"
                    android:drawableRight="@drawable/share"
                    android:drawablePadding="15dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="مشاركة"
                    android:textColor="#fff"
                    android:textSize="20dp" />

                <Button
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@color/main_blue_color"
                    android:drawableRight="@drawable/save"
                    android:drawablePadding="20dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="حفظ"
                    android:textColor="#fff"
                    android:textSize="20dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:gravity="right"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:padding="15dp"
                    android:src="@drawable/barcode_mini" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:padding="10dp"
                    android:text="معلومات شخصية"
                    android:textColor="#fff"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/fullName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginBottom="20dp"
                    android:paddingRight="20dp"
                    android:text=""

                    android:textColor="#fff"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/ID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/montserrat"
                    android:paddingRight="20dp"
                    android:textColor="#fff"

                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/Scname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/montserrat"
                    android:paddingRight="20dp"
                    android:textColor="#fff"

                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/Gendern"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/montserrat"
                    android:paddingRight="20dp"

                    android:textColor="#fff"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/BloodN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/montserrat"
                    android:paddingRight="20dp"

                    android:textColor="#fff"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/DateN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/montserrat"
                    android:paddingRight="20dp"

                    android:textColor="#fff"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/NatN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/montserrat"
                    android:paddingRight="20dp"

                    android:textColor="#fff"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/PhoneN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginBottom="50dp"
                    android:fontFamily="@font/montserrat"
                    android:paddingRight="20dp"

                    android:textColor="#fff"
                    android:textSize="20sp" />
            </LinearLayout>

            <!--            <Space-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="25dp" />-->


            <!--            <TextView-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_gravity="right"-->
            <!--                android:layout_marginBottom="10dp"-->
            <!--                android:fontFamily="@font/montserrat_bold"-->
            <!--                android:padding="20dp"-->
            <!--                android:text="السجل الصحي"-->
            <!--                android:textSize="30sp" />-->

            <!--            <TextView-->
            <!--                android:id="@+id/diseases"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_gravity="right"-->
            <!--                android:layout_marginBottom="10dp"-->
            <!--                android:fontFamily="@font/montserrat"-->
            <!--                android:paddingRight="20dp"-->
            <!--                android:text="hello world"-->
            <!--                android:textSize="20sp" />-->


        </LinearLayout>

    </ScrollView>



</RelativeLayout>