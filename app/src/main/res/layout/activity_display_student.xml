<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myFrameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    tools:context=".DisplayStudentActivity">



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="124dp"
        android:layout_height="124dp"
        android:layout_centerHorizontal="true"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="2dp"
        android:layout_marginTop="60dp" />

    <ImageView
        android:id="@+id/backbtn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="45dp"
        android:src="@drawable/backbtn"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="180dp"
            android:background="@color/blue_btn_bg_color"
            android:isScrollContainer="true"
            android:orientation="vertical"
            android:padding="25dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:padding="15dp"
                android:src="@drawable/barcode_mini" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/montserrat_bold"
                android:padding="20dp"
                android:text="معلومات شخصية"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/fullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:paddingRight="20dp"
                android:text=""
                android:textSize="20sp" />

            <TextView
                android:id="@+id/ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/montserrat"
                android:paddingRight="20dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/Scname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/montserrat"
                android:paddingRight="20dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/Gendern"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/montserrat"
                android:paddingRight="20dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/BloodN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/montserrat"
                android:paddingRight="20dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/DateN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/montserrat"
                android:paddingRight="20dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/NatN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/montserrat"
                android:paddingRight="20dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/PhoneN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/montserrat"
                android:paddingRight="20dp"
                android:textSize="20sp" />

