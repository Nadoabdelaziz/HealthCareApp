<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myFrameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayStudentActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="124dp"
        android:layout_height="124dp"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="2dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="60dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/blue_btn_bg_color"
        android:layout_gravity="center|top"
        android:padding="25dp"
        android:layout_marginTop="180dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/barcode_mini"
            android:layout_gravity="right"
            android:padding="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_gravity="right"
            android:padding="20dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="معلومات شخصية"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/fullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="right"
            android:paddingRight="20dp"
            android:text=""
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="right"
            android:paddingRight="20dp"
            android:fontFamily="@font/montserrat"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/Scname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="right"
            android:paddingRight="20dp"
            android:fontFamily="@font/montserrat"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/Gendern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="right"
            android:paddingRight="20dp"
            android:fontFamily="@font/montserrat"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/BloodN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="right"
            android:paddingRight="20dp"
            android:fontFamily="@font/montserrat"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/DateN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="right"
            android:paddingRight="20dp"
            android:fontFamily="@font/montserrat"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/NatN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="right"
            android:paddingRight="20dp"
            android:fontFamily="@font/montserrat"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/PhoneN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="right"
            android:paddingRight="20dp"
            android:fontFamily="@font/montserrat"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>





</FrameLayout>