<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="20dp"
    android:paddingLeft="20dp"
    android:background="#F6F2F2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/sickness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat"
            android:gravity="start"
            android:text="TextView"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/stdname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat"
            android:text="TextView"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat"
            android:text="TextView"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="45sp"
            android:layout_height="45dp"
            android:layout_marginRight="225dp"
            android:src="@drawable/aliluchloutfi"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:src="@drawable/ic_delete_grey"
            android:backgroundTint="@color/float_transparent"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/editthecomment"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_edit_grey"
            android:backgroundTint="@color/float_transparent"
            android:layout_height="wrap_content"/>






    </LinearLayout>


    </LinearLayout>