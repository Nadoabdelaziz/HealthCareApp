<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">



    <ImageView
        android:id="@+id/backbtn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/backbtn"/>

    <LinearLayout
        android:id="@+id/patientLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical">
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="هل نسيت كلمة السر "
        android:textSize="27sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:textSize="16dp"
            android:textColor="#000"
            android:text="الرجاء إدخال عنوان بريدك الإلكتروني المسجل لإعادة تعيين كلمة المرور الخاصة بك."/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="55dp"
            android:layout_marginRight="35dp"
            android:textSize="18dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="عنوان الايميل"
            android:layout_gravity="right"
            android:layout_height="wrap_content"/>


    <EditText
        android:id="@+id/email"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:gravity="right"
        android:ems="10"
        android:fontFamily="@font/montserrat"
        android:hint="xywz@provider.domaine"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textSize="16sp" />


        <Button
            android:id="@+id/resetButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="280dp"
            android:background="@drawable/custombutton"
            android:fontFamily="@font/montserrat_bold"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="ارسال"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="25sp" />

</LinearLayout>


</LinearLayout>