<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myFrameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayDoctorInfo">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginTop="50dp"
        android:textSize="25dp"
        android:textColor="#000"
        android:text="ساعد لدعم"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="120dp"
        android:src="@drawable/help" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:textSize="25dp"
        android:textColor="#000"
        android:text="كيف يمكننا مساعدتك؟"/>

    <TextView
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:textSize="15dp"
        android:textColor="#000"
        android:text="يبدو أن لديك مشاكل مع تطبيقنا نحن هنا لمساعدتك من فضلك تواصل معنا"/>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:gravity="center"
        android:layout_marginBottom="80dp">

        <androidx.cardview.widget.CardView
            android:layout_width="125dp"
            android:layout_marginRight="35dp"
            android:backgroundTint="@color/cardview_shadow_end_color"
            android:layout_height="125dp">
            <ImageView
                android:id="@+id/phoneCallhelp"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/phone"
                android:padding="5dp"
                android:onClick="phoneCallHelp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:textSize="20dp"
                android:textColor="#000"
                android:padding="5dp"
                android:text="دردش معنا"/>

        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="125dp"
            android:backgroundTint="@color/cardview_shadow_end_color"
            android:layout_height="125dp">
            <ImageView
                android:id="@+id/gmailhelp"
                android:layout_width="64dp"
                android:layout_height="66dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/gmail"
                android:padding="5dp"
                android:onClick="GmailHelp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:textSize="20dp"
                android:textColor="#000"
                android:padding="5dp"
                android:text="بريد إلكتروني"/>

        </androidx.cardview.widget.CardView>





